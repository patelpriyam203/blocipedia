<div class="row">
  <div class="col-md-8">
    <h2 class="text-center">My Wikis</h2>
  </div>
  <div class="col-md-4">
    <%= link_to "New", new_wiki_path, class: 'btn btn-success' %>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <% @wikis.each do |wiki| %>
    <div class="media">
      <div class="media-body">

        <h4 class="media-heading">
          <%= link_to wiki.title, wiki %>
        </h4>

        <div class="text-right">
          <% if wiki.private? %>
            <small>This Private Wiki belongs to <%= wiki.user.email %> created on <%= wiki.created_at %>.</small>
          <% else %>
            <small>Created by <%= wiki.user.email %> on <%= wiki.created_at %>.</small>
          <% end %>
        </div>

        <hr>

      </div>
    </div>
    <% end %>
  </div>
</div>
